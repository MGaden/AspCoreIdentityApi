{
  "ConnectionStrings": {
    "Default": "Server=localhost; Database=CoreIdentityDb; Trusted_Connection=True;"
  },
  "Email": {
    "To": "xxx@gmail.com",
    "From": "xxx@gmail.com",
    "DisplayName": "CoreIdentity",
    "SendGridApiKey": "xxx"
  },
  "JwtSecurityToken": {
    "key": "xxx",
    "Issuer": "CoreIdentity",
    "Audience": "CoreIdentityUser",
    "DurationInMinutes": 5
  },
  "QRCode": {
    "AppName": "CoreIdentity"
  },
  "AllowedIPs": "127.0.0.1;127.0.0.2",
  "EnableCheckAllowedIPs": "true",
  "ClientApp": {
    "Url": "http://localhost:4200/",
    "EmailConfirmationPath": "confirm",
    "ResetPasswordPath": "password"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Warning"
    }
  },
  //
  //"Debug": { // Debug provider.
  //  "LogLevel": {
  //    "Default": "Information", // Overrides preceding LogLevel:Default setting.
  //    "Microsoft.Hosting": "Trace" // Debug:Microsoft.Hosting category.
  //  }
  //}
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Error",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/CoreIdentity_.log",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 5242880,
          "rollOnFileSizeLimit" :  true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "CoreIdentity"
    }
  }
}